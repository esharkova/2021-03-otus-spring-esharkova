        <createIndex tableName="clntpos_custompositions" indexName="k02_clntpos_custompositions" unique="false">
            <column name="customid"/>
            <column name="positiondatekind"/>
        </createIndex>
        <comment>Create of clntpos_custompositions table</comment>
    </changeSet>

